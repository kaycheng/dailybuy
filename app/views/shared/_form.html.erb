<%= form_for obj do |f| %>
  <div class='field'>
    <%= f.label :name, '產品名稱' %>
    <%= f.text_field :name, class: 'input' %>
  </div>

  <div class='field'>
    <%= f.label :category, '總類' %>
    <%= f.collection_select :category_id, Category.all, :id, :name,
          {prompt: true}, {class: "form-control"} %>
  </div>

  <div class='field'>
    <%= f.label :price, '價格' %>
    <%= f.text_field :price, class: 'input' %>
  </div>

  <div class='field'>
    <%= f.label :description, '描述' %>
    <%= f.text_area :description, class: 'textarea', rows: 10 %>
  </div>

  <div class='field'>
    <%= f.label :photo, '照片' %></br>
    <div class="control">
      <%= f.file_field :photo %>
    </div>
    <%= photo(@product, 200) %>
  </div>

  <%= f.submit class: "button is-primary" %>

  <%= link_to "回前頁", products_path, class: 'button is-dark' %>


<% end %>