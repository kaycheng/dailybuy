<h1 class="title">最新產品</h1>

<div class="tile is-ancestor">
  <% @products.each do |product| %>
    <div class="tile is-4 is-parent">
      <%= link_to product_path(product) do %>
        <article class="tile is-child box">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= image_tag(product.photo, width: "200px") if product.photo.attached? %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= product.name %></p>
                <p class="subtitle is-6">NT: <%= product.price %></p>
                <p><%= render partial: "shared/like", locals: {obj: product} %></p>
              </div>
            </div>

            <div class="content">
              <p><%= truncate(product.description, length: 50) %></p>
              <br>
              <time><%= time_ago_in_words(product.created_at) %></time>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  <% end %>
</div>

